{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
